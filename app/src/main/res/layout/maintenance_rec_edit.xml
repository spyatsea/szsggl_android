<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain"
    android:orientation="vertical">

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_normal_green_dark" />

    <LinearLayout
        android:id="@+id/listTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exercise_bg_c_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="3dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/title_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_pic"
            android:contentDescription="@null"
            android:src="@drawable/disk"
            android:visibility="visible" />

        <TextView
            android:id="@+id/listTitleTv"
            style="@style/loginTextStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:minLines="1"
            android:padding="5dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/text_orange"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/solid_plain"
        android:fadingEdge="none"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/solid_plain"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="记录标题："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="*"
                    android:textColor="@color/solid_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/titleTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dip"
                android:layout_marginRight="8dip"
                android:layout_marginBottom="3dip"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:minLines="1"
                android:padding="3dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/solid_black"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="项目进度："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="*"
                    android:textColor="@color/solid_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dip"
                android:background="@drawable/border_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="3dip"
                android:paddingRight="0dip"
                android:paddingBottom="3dip"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/stage1Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="项目状态："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="*"
                    android:textColor="@color/solid_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dip"
                android:background="@drawable/border_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="3dip"
                android:paddingRight="0dip"
                android:paddingBottom="3dip"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/stage2Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="记录主类："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="*"
                    android:textColor="@color/solid_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dip"
                android:background="@drawable/border_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="3dip"
                android:paddingRight="0dip"
                android:paddingBottom="3dip"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/cat1Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="记录子类："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="*"
                    android:textColor="@color/solid_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dip"
                android:background="@drawable/border_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="3dip"
                android:paddingRight="0dip"
                android:paddingBottom="3dip"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/cat2Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="记录来源："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/lyTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dip"
                android:layout_marginRight="8dip"
                android:layout_marginBottom="3dip"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:minLines="1"
                android:padding="3dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/solid_black"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="是否受控："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dip"
                android:background="@drawable/border_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="3dip"
                android:paddingRight="0dip"
                android:paddingBottom="3dip"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/skSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="内容简介："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/infoTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="3dip"
                android:layout_marginRight="8dip"
                android:layout_marginBottom="3dip"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:minLines="3"
                android:padding="3dip"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/solid_black"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/photoTitleLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="图片："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/photoNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/record_hintnum"
                    android:textColor="@color/navigation_channel_text_color_grey"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/photoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_btn_white"
                    android:drawableLeft="@drawable/table_icon_camera_normal"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingTop="2dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="2dip"
                    android:shadowColor="@color/trans_grey"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/take_photo"
                    android:textColor="@color/solid_black"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photoContentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <Gallery
                    android:id="@+id/photoGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="20dp"
                    android:spacing="5dp"
                    android:unselectedAlpha="0.3" />

                <TextView
                    android:id="@+id/photoDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/trans_orange_lighter"
                    android:gravity="left"
                    android:padding="3dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/videoTitleLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="视频："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/videoNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/record_hintnum"
                    android:textColor="@color/navigation_channel_text_color_grey"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/videoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_btn_white"
                    android:drawableLeft="@drawable/table_icon_video_normal"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingTop="2dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="2dip"
                    android:shadowColor="@color/trans_grey"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/take_video"
                    android:textColor="@color/solid_black"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videoContentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <Gallery
                    android:id="@+id/videoGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="20dp"
                    android:spacing="5dp"
                    android:unselectedAlpha="0.3" />

                <TextView
                    android:id="@+id/videoDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/trans_blue_lighter"
                    android:gravity="left"
                    android:padding="3dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/audioTitleLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="音频："
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/audioNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/record_hintnum"
                    android:textColor="@color/navigation_channel_text_color_grey"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/audioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_btn_white"
                    android:drawableLeft="@drawable/table_icon_mic_normal"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingTop="2dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="2dip"
                    android:shadowColor="@color/trans_grey"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/take_audio"
                    android:textColor="@color/solid_black"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/audioContentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <Gallery
                    android:id="@+id/audioGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="20dp"
                    android:spacing="5dp"
                    android:unselectedAlpha="0.3" />

                <TextView
                    android:id="@+id/audioDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/trans_green_lighter"
                    android:gravity="left"
                    android:padding="3dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/solid_plain"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_margin="0dp"
        android:background="@drawable/navigation_bar_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="110dp"
            android:layout_height="38.0dip"
            android:background="@drawable/custom_btn_card_red"
            android:gravity="center"
            android:text="@string/cancel_blank"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="110dp"
            android:layout_height="38.0dip"
            android:layout_marginLeft="20.0dip"
            android:background="@drawable/custom_btn_card_green"
            android:gravity="center"
            android:text="@string/record_save_blank"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>