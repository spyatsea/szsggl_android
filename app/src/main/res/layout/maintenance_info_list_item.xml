<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/infoSn"
            android:layout_width="wrap_content"
            android:layout_height="32.0dip"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:background="@color/background_title_blue"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="32.0dp"
            android:paddingLeft="3dip"
            android:paddingTop="0dip"
            android:paddingRight="3dip"
            android:paddingBottom="0dip"
            android:text="1"
            android:textColor="@color/solid_plain"
            android:textSize="18sp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:id="@+id/infoValueLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/solid_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoValueLayout"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/normal_text_color_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/normal_text_color_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/normal_text_color_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_c4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/normal_text_color_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info_c5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/normal_text_color_grey"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dip"
        android:background="@color/view_grey"
        android:paddingLeft="2dip"
        android:paddingRight="2dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/showBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:addStatesFromChildren="true"
            android:background="@drawable/cell_bg_blue_selector"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showBtnTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:drawableLeft="@drawable/list_btn_icon_detail"
                android:text=" 项目基本信息"
                android:textColor="@color/background_title_blue"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/view_grey" />

        <LinearLayout
            android:id="@+id/addBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:addStatesFromChildren="true"
            android:background="@drawable/cell_bg_blue_selector"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addBtnTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:paddingLeft="5dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingRight="5dip"
                android:drawableLeft="@drawable/list_btn_icon_add"
                android:text=" 新建项目记录"
                android:textColor="@color/background_title_purple"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>