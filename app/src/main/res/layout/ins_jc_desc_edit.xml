<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain"
    android:orientation="vertical">

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_normal_blue_dark" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/solid_plain"
        android:fadingEdge="none"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/solid_plain"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="left|top"
                    android:text="检查内容："
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:minLines="1"
                    android:text=""
                    android:textColor="@color/text_blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="检查描述："
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/photoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:background="@drawable/custom_btn_white"
                    android:drawableLeft="@drawable/table_icon_camera_normal"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:shadowColor="@color/trans_grey"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/take_photo"
                    android:textColor="@color/solid_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/videoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/custom_btn_white"
                    android:drawableLeft="@drawable/table_icon_video_normal"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:shadowColor="@color/trans_grey"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/take_video"
                    android:textColor="@color/solid_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/audioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/custom_btn_white"
                    android:drawableLeft="@drawable/table_icon_mic_normal"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:shadowColor="@color/trans_grey"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/take_audio"
                    android:textColor="@color/solid_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/normalBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dip"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/custom_btn_red"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="常见缺陷"
                    android:textColor="@color/solid_plain"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="8dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/border_white_grey"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:paddingLeft="5dip"
                android:paddingTop="3dip"
                android:paddingRight="5dip"
                android:paddingBottom="3dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:minLines="1"
                        android:paddingTop="3dip"
                        android:paddingBottom="3dip"
                        android:text="常见缺陷："
                        android:textColor="@color/text_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/normalTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_table_white_grey_dotted_selector"
                        android:gravity="left|top"
                        android:hint="选择常见缺陷…"
                        android:minLines="1"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/text_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:minLines="1"
                        android:paddingTop="3dip"
                        android:paddingBottom="3dip"
                        android:text="检查描述："
                        android:textColor="@color/text_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/descTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_table_white_grey_dotted_selector"
                        android:gravity="left|top"
                        android:hint="请录入检查描述…"
                        android:minLines="1"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="@color/text_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="现场图片："
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/photoNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/record_hintnum"
                    android:textColor="@color/navigation_channel_text_color_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <Gallery
                    android:id="@+id/photoGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="20dp"
                    android:spacing="5dp"
                    android:unselectedAlpha="0.3" />

                <TextView
                    android:id="@+id/photoDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/trans_orange_lighter"
                    android:gravity="left"
                    android:padding="3dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="现场视频："
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/videoNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/record_hintnum"
                    android:textColor="@color/navigation_channel_text_color_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <Gallery
                    android:id="@+id/videoGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="20dp"
                    android:spacing="5dp"
                    android:unselectedAlpha="0.3" />

                <TextView
                    android:id="@+id/videoDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/trans_blue_lighter"
                    android:gravity="left"
                    android:padding="3dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="现场音频："
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/audioNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/record_hintnum"
                    android:textColor="@color/navigation_channel_text_color_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <Gallery
                    android:id="@+id/audioGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="20dp"
                    android:spacing="5dp"
                    android:unselectedAlpha="0.3" />

                <TextView
                    android:id="@+id/audioDescTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/trans_green_lighter"
                    android:gravity="left"
                    android:padding="3dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/solid_plain"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_margin="0dp"
        android:background="@drawable/navigation_bar_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="150dp"
            android:layout_height="38.0dip"
            android:background="@drawable/custom_btn_card_red"
            android:gravity="center"
            android:text="@string/cancel_blank"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="150dp"
            android:layout_height="38.0dip"
            android:layout_marginLeft="30.0dip"
            android:background="@drawable/custom_btn_card_green"
            android:gravity="center"
            android:text="@string/record_save_blank"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>