<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="false"
    android:background="@color/solid_plain"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/splitterView_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_bubble_dark"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/tableRowContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_cr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/info_r"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:addStatesFromChildren="true"
            android:background="@drawable/cell_bg_blue_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_t3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_grey_dark"
                android:gravity="center"
                android:minLines="1"
                android:padding="0dp"
                android:text=""
                android:textColor="@color/solid_plain"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/info_t3"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:minLines="1"
                android:padding="0dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:addStatesFromChildren="true"
            android:background="@drawable/cell_bg_blue_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <FrameLayout
            android:id="@+id/info_c5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:addStatesFromChildren="true"
            android:background="@drawable/cell_bg_blue_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t5x"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/table_icon_medium_priority_normal"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/info_t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />

        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />
    </LinearLayout>

    <View
        android:id="@+id/splitterView_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_bubble_dark"
        android:visibility="visible" />

</LinearLayout>