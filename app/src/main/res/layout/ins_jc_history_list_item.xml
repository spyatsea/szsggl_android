<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="false"
    android:background="@color/solid_plain"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:scrollbarStyle="insideOverlay">

    <FrameLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:paddingRight="3dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/tableBodyLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_bubble_dark"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="@color/list_color_header_background_purple_01" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:addStatesFromChildren="true"
                        android:background="@color/background_grey"
                        android:gravity="top|left"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="2dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="2dip">

                        <TextView
                            android:id="@+id/infoSn"
                            android:layout_width="wrap_content"
                            android:layout_height="32.0dip"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/background_title_purple"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:minWidth="32.0dp"
                            android:paddingLeft="3dip"
                            android:paddingTop="0dip"
                            android:paddingRight="3dip"
                            android:paddingBottom="0dip"
                            android:text="1"
                            android:textColor="@color/solid_plain"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/infoName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:gravity="center_vertical|left"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text=""
                            android:textColor="@color/solid_black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"></LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="80dip"
                    android:background="@color/background_bubble_dark"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_bubble_dark"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="@color/list_color_header_background_purple_01" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text="区域标识"
                            android:textColor="@color/solid_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:id="@+id/info_c1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text=""
                            android:textColor="@color/normal_text_color_grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"></LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="80dip"
                    android:background="@color/background_bubble_dark"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_bubble_dark"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="@color/list_color_header_background_purple_01" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text="巡视时间"
                            android:textColor="@color/solid_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:id="@+id/info_c2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text=""
                            android:textColor="@color/normal_text_color_grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"></LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="80dip"
                    android:background="@color/background_bubble_dark"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_bubble_dark"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="@color/list_color_header_background_purple_01" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text="巡视人员"
                            android:textColor="@color/solid_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:id="@+id/info_c3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text=""
                            android:textColor="@color/normal_text_color_grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"></LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="80dip"
                    android:background="@color/background_bubble_dark"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:background="@color/list_color_header_background_purple_01"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="@color/list_color_header_background_purple_01" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text="巡视状态"
                            android:textColor="@color/solid_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:addStatesFromChildren="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="4dip"
                        android:paddingTop="0dip"
                        android:paddingRight="4dip"
                        android:paddingBottom="0dip">

                        <TextView
                            android:id="@+id/info_c4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:minLines="1"
                            android:padding="2dp"
                            android:text=""
                            android:textColor="@color/normal_text_color_grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />

                    <LinearLayout
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"></LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_bubble_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_bubble_dark"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:paddingBottom="4.0dip">

                <Button
                    android:id="@+id/showBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/custom_btn_card_blue"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="查阅"
                    android:textColor="@color/solid_plain"
                    android:textSize="15.0sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/custom_btn_card_red"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/solid_plain"
                    android:textSize="15.0sp"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


</LinearLayout>