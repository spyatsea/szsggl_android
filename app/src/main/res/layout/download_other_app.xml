<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain"
    android:orientation="vertical">

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_normal" />

    <ScrollView
        android:id="@+id/contentView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/solid_plain"
        android:fadingEdge="none"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/solid_plain"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dip"
                    android:singleLine="false"
                    android:text="这里提供了一些常用的办公APP。用来打开和查阅附件(如.doc、.xls、.pdf等后缀的文件）。请根据自己的手机型号，选择对应的应用市场来下载。"
                    android:textColor="@color/solid_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="4dip"
                android:paddingRight="0dip"
                android:paddingBottom="0dip">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_toRightOf="@id/app1"
                    android:background="#AA1A237E"
                    android:visibility="visible"></View>

                <TextView
                    android:id="@+id/app1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0dip"
                    android:background="@color/solid_plain"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:paddingLeft="5dip"
                    android:paddingTop="2dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="2dip"
                    android:text="1、WPS Office"
                    android:textColor="#AA1A237E"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <Button
                    android:id="@+id/btn1_1"
                    android:layout_width="0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_card_green"
                    android:drawableLeft="@drawable/tencent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="腾讯应用宝"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn1_2"
                    android:layout_width="0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_card_red"
                    android:drawableLeft="@drawable/huawei"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="华为应用市场"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />
            </LinearLayout>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="left|top"
                android:lineSpacingExtra="3dip"
                android:minLines="1"
                android:paddingLeft="8dip"
                android:paddingTop="3dip"
                android:paddingRight="8dip"
                android:paddingBottom="3dip"
                android:text="优秀的国产办公软件套装，可以实现办公软件最常用的文字、表格、演示、PDF阅读等多种功能。"
                android:textColor="@color/normal_text_color_grey"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="4dip"
                android:paddingRight="0dip"
                android:paddingBottom="0dip">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_toRightOf="@id/app2"
                    android:background="#AA1A237E"
                    android:visibility="visible"></View>

                <TextView
                    android:id="@+id/app2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0dip"
                    android:background="@color/solid_plain"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:paddingLeft="5dip"
                    android:paddingTop="2dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="2dip"
                    android:text="2、Microsoft Office"
                    android:textColor="#AA1A237E"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <Button
                    android:id="@+id/btn2_1"
                    android:layout_width="0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_card_green"
                    android:drawableLeft="@drawable/tencent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="腾讯应用宝"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn2_2"
                    android:layout_width="0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_card_red"
                    android:drawableLeft="@drawable/huawei"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="华为应用市场"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="left|top"
                android:lineSpacingExtra="3dip"
                android:minLines="1"
                android:paddingLeft="8dip"
                android:paddingTop="3dip"
                android:paddingRight="8dip"
                android:paddingBottom="3dip"
                android:text="由Microsoft(微软)公司开发的办公软件套装。常用组件有 Word、Excel、PowerPoint等。"
                android:textColor="@color/normal_text_color_grey"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="0dip"
                android:paddingTop="4dip"
                android:paddingRight="0dip"
                android:paddingBottom="0dip">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_toRightOf="@id/app3"
                    android:background="#AA1A237E"
                    android:visibility="visible"></View>

                <TextView
                    android:id="@+id/app3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0dip"
                    android:background="@color/solid_plain"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:paddingLeft="5dip"
                    android:paddingTop="2dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="2dip"
                    android:text="3、Microsoft Word"
                    android:textColor="#AA1A237E"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <Button
                    android:id="@+id/btn3_1"
                    android:layout_width="0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_card_green"
                    android:drawableLeft="@drawable/tencent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="腾讯应用宝"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn3_2"
                    android:layout_width="0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_card_red"
                    android:drawableLeft="@drawable/huawei"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="华为应用市场"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="left|top"
                android:lineSpacingExtra="3dip"
                android:minLines="1"
                android:paddingLeft="8dip"
                android:paddingTop="3dip"
                android:paddingRight="8dip"
                android:paddingBottom="3dip"
                android:text="由Microsoft(微软)公司开发的文字处理程序。属于Microsoft Office套装中的一部分。"
                android:textColor="@color/normal_text_color_grey"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/solid_plain"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_margin="0dp"
        android:background="@drawable/navigation_bar_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/goBackBtn"
            android:layout_width="150dp"
            android:layout_height="38.0dip"
            android:background="@drawable/custom_btn_card_blue"
            android:gravity="center"
            android:text="返　回"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>