<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/permissionBtn"
        android:layout_width="150dp"
        android:layout_height="38.0dip"
        android:background="@drawable/custom_btn_white"
        android:gravity="center"
        android:text="手工设置权限"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:textColor="@drawable/text_color_blue_white_selector"
        android:textSize="18.0sp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/splashProBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:progressDrawable="@drawable/progressbar_splash"
        android:visibility="gone" />

    <TextView
        android:id="@+id/splashText"
        style="@style/splashTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="1.0dip"
        android:text="@string/app_dept"
        android:textColor="@color/navigation_channel_text_color"
        android:shadowColor="@color/solid_plain"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:visibility="visible" />

</RelativeLayout>