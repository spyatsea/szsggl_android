<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="false"
    android:background="@color/solid_plain"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/splitterView_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_bubble_dark"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/tableRowContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <LinearLayout
            android:id="@+id/info_c4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />

        <FrameLayout
            android:id="@+id/info_c5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:addStatesFromChildren="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/list_color_content_font_blue_01"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_t5i1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:contentDescription="@null"
                    android:padding="2dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/table_icon_sms_normal"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/info_t5i2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:contentDescription="@null"
                    android:padding="2dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/table_icon_attachment_normal"
                    android:visibility="gone" />
            </LinearLayout>

        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/background_bubble_dark" />
    </LinearLayout>

    <View
        android:id="@+id/splitterView_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_bubble_dark"
        android:visibility="visible" />

</LinearLayout>