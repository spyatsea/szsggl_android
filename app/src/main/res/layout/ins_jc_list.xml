<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain"
    android:orientation="vertical">

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_ins_jc_list" />

    <LinearLayout
        android:id="@+id/listTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exercise_bg_n"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="3dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/table_border_white_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_table_blue"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="5dip"
                android:paddingTop="1dip"
                android:paddingRight="5dip"
                android:paddingBottom="1dip"
                android:text="巡视类别"
                android:textColor="@color/solid_plain"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@id/title_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="5dip"
                android:paddingTop="1dip"
                android:paddingRight="5dip"
                android:paddingBottom="1dip"
                android:text="停水检查"
                android:textColor="@color/list_color_header_background_blue_01"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/listTitleTv"
            style="@style/loginTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:gravity="center"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:singleLine="true"
            android:text="@string/msg_ins_jc_list_std"
            android:textColor="@color/text_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/stdNumTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:singleLine="true"
            android:text="@string/record_hintnum"
            android:textColor="@color/text_black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/startTimeIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_pic"
            android:contentDescription="@null"
            android:paddingLeft="0dip"
            android:paddingTop="3dip"
            android:paddingRight="0dip"
            android:paddingBottom="3dip"
            android:scaleType="centerInside"
            android:src="@drawable/table_icon_clock_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/startTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:gravity="center"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/normal_text_color_grey"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableHeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tableHeaderRowLayout"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:background="@color/solid_plain"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/splitterView_1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background_bubble_dark"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/tableHeaderContentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_title_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/background_bubble_dark" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="序号"
                        android:textColor="@color/solid_black"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/background_bubble_dark" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="检查内容"
                        android:textColor="@color/solid_black"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/background_bubble_dark" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="判定"
                        android:textColor="@color/solid_black"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/background_bubble_dark" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="消缺"
                        android:textColor="@color/solid_black"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/background_bubble_dark" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="描述/附件"
                        android:textColor="@color/solid_black"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/background_bubble_dark" />
            </LinearLayout>

            <View
                android:id="@+id/splitterView_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background_bubble_dark"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@color/solid_plain"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@id/infoList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/solid_plain"
            android:cacheColorHint="@color/solid_plain"
            android:divider="@drawable/transparent_pic"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_margin="0dp"
        android:background="@drawable/navigation_bar_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/goBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom_btn_card_blue"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="返　回"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/pauseBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom_btn_card_blue_shakespeare"
            android:drawableLeft="@drawable/table_icon_exit_normal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="暂时关闭"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/createBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_btn_card_purple"
            android:drawableLeft="@drawable/table_icon_pencil_normal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/title_jc_start"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_btn_card_red"
            android:drawableLeft="@drawable/table_icon_ok_red_normal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="完成检查"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>