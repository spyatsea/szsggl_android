<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/newsItemLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/newsItemImage"
        android:layout_width="match_parent"
        android:layout_height="180.0dip"
        android:background="@drawable/transparent_pic"
        android:contentDescription="@null"
        android:gravity="center" />

    <TextView
        android:id="@id/newsItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans_black_light"
        android:lines="1"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:padding="5dp"
        android:textColor="@color/solid_plain" 
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="16sp"/>

</RelativeLayout>