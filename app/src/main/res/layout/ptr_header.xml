<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ptr_headerContainer">
    <LinearLayout android:id="@+id/ptr_id_header" style="@style/ptr_header">
        <FrameLayout android:id="@+id/ptr_id_indicatorContainer" style="@style/ptr_indicatorContainer">
		    <ImageView android:id="@+id/ptr_id_image" style="@style/ptr_arrow" android:layout_gravity="center"/>
		    <ProgressBar android:id="@+id/ptr_id_spinner" style="@style/ptr_spinner1" android:layout_gravity="center" />
	    </FrameLayout>

        <LinearLayout android:id="@+id/ptr_id_textwrapper" style="@style/ptr_textwrapper">
            <TextView android:id="@+id/ptr_id_text" style="@style/ptr_text"/>
            <TextView android:id="@+id/ptr_id_last_updated" style="@style/ptr_last_updated"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
