<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain"
    android:orientation="vertical">

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_ins_point_edit" />

    <LinearLayout
        android:id="@+id/listTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exercise_bg_n"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="3dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/listTitleTv"
            style="@style/loginTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minLines="1"
            android:padding="5dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableHeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tableHeaderRowLayout"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:background="@color/solid_plain"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/splitterView_1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_color_split_row_blue_01"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/tableHeaderContentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_color_header_background_blue_01"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout0x"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn0x"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="序号"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="选择"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="巡视点"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="定位"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="签到打卡记录"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn52"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="现场检查记录"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />
            </LinearLayout>

            <View
                android:id="@+id/splitterView_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background_bubble_dark"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@color/solid_plain"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@id/infoList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/solid_plain"
            android:cacheColorHint="@color/solid_plain"
            android:divider="@drawable/transparent_pic"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_margin="0dp"
        android:background="@drawable/navigation_bar_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/bottomBarLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:background="@drawable/custom_btn_card_blue"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="返　回"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/finishBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:background="@drawable/custom_btn_card_red"
                android:drawableLeft="@drawable/table_icon_tick_normal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="结束巡视"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/locAddBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_card_blue_dark"
                android:drawableLeft="@drawable/table_icon_loc_add_normal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="采集"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/locBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_card_blue_shakespeare"
                android:drawableLeft="@drawable/table_icon_address_normal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="定位"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/autoDkBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_card_red_dark"
                android:drawableLeft="@drawable/table_icon_loc_add_normal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="扫卡快签"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/dkBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_card_green"
                android:drawableLeft="@drawable/table_icon_street_view_normal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="打卡"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/jcBtn"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:background="@drawable/custom_btn_card_purple"
                android:drawableLeft="@drawable/table_icon_create_normal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/title_jc_new"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>