<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/insPointLayoutItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/list_btn"
            android:layout_width="0dp"
            android:layout_height="38.0dip"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_card_blue"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/solid_plain"
            android:textSize="@dimen/list_btn_text_size"
            android:textStyle="normal" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom_btn_card_purple"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="新建"
            android:textColor="@color/solid_plain"
            android:textSize="@dimen/list_btn_text_size"
            android:textStyle="normal"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>