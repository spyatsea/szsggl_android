<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/solid_plain"
        android:orientation="vertical">

        <include
            android:id="@id/title_bar_layout"
            layout="@layout/title_bar_normal" />

        <ScrollView
            android:id="@+id/contentView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/solid_plain"
            android:fadingEdge="none"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/solid_plain"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="卡　　号："
                        android:textColor="@color/solid_black"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="left|top"
                    android:minLines="1"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:paddingRight="8dip"
                    android:paddingBottom="3dip"
                    android:text=" "
                    android:textColor="@color/normal_text_color_grey"
                    android:textColorHint="@color/text_hint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="备　　注："
                        android:textColor="@color/solid_black"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/memoTv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="left|top"
                    android:minLines="1"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:paddingRight="8dip"
                    android:paddingBottom="3dip"
                    android:text=" "
                    android:textColor="@color/normal_text_color_grey"
                    android:textColorHint="@color/text_hint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="次数："
                        android:textColor="@color/solid_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/c1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/text_green_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="运行时间："
                        android:textColor="@color/solid_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/c2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/text_red"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="功　　率："
                        android:textColor="@color/solid_black"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/c3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="3dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginBottom="3dip"
                    android:background="@drawable/border_grey"
                    android:gravity="left|top"
                    android:hint=""
                    android:inputType="number"
                    android:minLines="1"
                    android:padding="3dip"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/solid_black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_blue"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="连接串口（波特率115200）"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_red"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="关闭串口"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_blue"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="连接状态"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/scanBtn"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_green"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/title_card_scan_start"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_blue"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="修改功率"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_blue"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="切换扫卡声音"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_blue"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="修改功率"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn71"
                        android:layout_width="match_parent"
                        android:layout_height="38.0dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_btn_card_blue"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="扫卡快签"
                        android:textColor="@color/solid_plain"
                        android:textSize="@dimen/list_btn_text_size"
                        android:textStyle="normal" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="match_parent"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_btn_card_blue"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="扫卡快签"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:layout_height="38.0dip"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_btn_card_blue"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="动画"
                    android:textColor="@color/solid_plain"
                    android:textSize="@dimen/list_btn_text_size"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/solid_plain"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@id/bottomBar"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:background="@drawable/navigation_bar_bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <Button
                android:id="@+id/goBackBtn"
                android:layout_width="150dp"
                android:layout_height="38.0dip"
                android:background="@drawable/custom_btn_card_blue"
                android:gravity="center"
                android:text="返　回"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/picIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/m_5"
            android:contentDescription="@null"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/noticeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:shadowColor="@color/trans_white"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="3"
            android:text="签到打卡 + 1"
            android:textColor="@color/text_color_orange_1"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="invisible"/>
    </RelativeLayout>
</FrameLayout>