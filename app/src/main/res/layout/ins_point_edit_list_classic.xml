<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_plain"
    android:orientation="vertical">

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_ins_point_edit" />

    <LinearLayout
        android:id="@+id/tableHeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tableHeaderRowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/solid_plain"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/splitterView_1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_color_split_row_blue_01"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/tableHeaderContentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_color_header_background_blue_01"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout0x"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn0x"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="序号"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="选择"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="巡视点"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="定位"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="签到打卡记录"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />

                <LinearLayout
                    android:id="@+id/tableColumnLayout5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tableColumn52"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minLines="1"
                        android:padding="2dp"
                        android:text="现场检查记录"
                        android:textColor="@color/list_color_header_font_blue_01"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/list_color_split_row_blue_01" />
            </LinearLayout>

            <View
                android:id="@+id/splitterView_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background_bubble_dark"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/solid_plain"
        android:fadingEdge="none"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/solid_plain"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/x1TableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tableBodyLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/solid_plain"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_margin="0dp"
        android:background="@drawable/navigation_bar_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/goBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_btn_card_blue"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="返　回"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="150.0dip"
            android:layout_height="38.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_card_green"
            android:drawableLeft="@drawable/table_icon_edit_normal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="检查登记"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/dkBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/submitBtn"
            android:background="@drawable/custom_btn_card_purple"
            android:drawableLeft="@drawable/table_icon_street_view_normal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="打卡"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/locBtn"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/dkBtn"
            android:background="@drawable/custom_btn_card_red"
            android:drawableLeft="@drawable/table_icon_address_normal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="定位"
            android:textColor="@color/solid_plain"
            android:textSize="18.0sp" />
    </RelativeLayout>

</LinearLayout>