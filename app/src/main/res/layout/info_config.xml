<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@id/title_bar_layout"
        layout="@layout/title_bar_me_main" />

    <ScrollView
        android:id="@id/main_exercise_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:fadingEdge="none"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:padding="7dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="7dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/receiveAlertMinuteTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="@color/solid_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/receiveAlertDayTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="@color/solid_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/receivePicDayTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="@color/solid_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/mapFirstTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="@color/solid_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/solid_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/mapOtherTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:gravity="left|top"
                android:hint=""
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="@color/solid_black"
                android:textSize="16sp" />

            <Button
                android:id="@id/submitBtn"
                android:layout_width="100dp"
                android:layout_height="38.0dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/custom_btn_card_blue"
                android:gravity="center"
                android:text="@string/record_save"
                android:textColor="@color/solid_plain"
                android:textSize="18.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>