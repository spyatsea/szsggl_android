            <corners android:radius="2dip" />

            <stroke android:width="2px" android:color="@color/list_color_content_background_odd_blue_02" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="@color/list_color_header_background_blue_02" />

            <corners android:radius="2dip" />

