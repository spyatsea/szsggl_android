<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1px" android:color="#bcbcbc" />
             <gradient  android:angle="-90"  android:startColor="#dcdee5" android:endColor="#ced3dc"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1px" android:color="#bcbcbc" />
             <solid  android:color="#d3d8c2"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1px" android:color="#bcbcbc" />
             <gradient  android:angle="-90"  android:startColor="#f0f2f9" android:endColor="#e1e4ed" />            
         </shape>
     </item>
</selector>