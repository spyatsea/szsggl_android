<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ptr_headerContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="ptr_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>
    
    <style name="ptr_indicatorContainer">
        <item name="android:layout_width">@dimen/pull_refresh_progress_size</item>
        <item name="android:layout_height">@dimen/pull_refresh_progress_size</item>
        <item name="android:layout_marginRight">@dimen/updatebar_icon_space</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ptr_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ptr_pulltorefresh_arrow</item>
    </style>
    
    <style name="ptr_spinner" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
    <style name="ptr_spinner1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/pull_refresh_progress</item>
        <item name="android:indeterminateDuration">750</item>
    </style>

    <style name="ptr_textwrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ptr_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    
    <style name="ptr_last_updated" parent="ptr_text">
        <item name="android:textStyle">normal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
     <style name="ptr_footerContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ptr_footer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ptr_footerSenser">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>